<Window x:Class="MenuWithSubMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuWithSubMenu" 
        xmlns:customcontrol="clr-namespace:MenuWithSubMenu.CustomControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>

        <!--Side menu-->
        <customcontrol:MenuWithSubMenuControl HasIcon="True"
                                              SubMenuPadding="15,0,0,0"/>

        <!--Frame for pages to navigate when a menu is clicked.-->
        <Frame Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
